<Project Sdk="Microsoft.NET.Sdk">

    <Sdk Name="NorthSouthSystems.NET.Sdk" Version="2.3.4" />

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <NoWarn>NU5100</NoWarn>
        <Description>This .NET library contains opinionated code for unzipping and processing Stack Exchange data dumps.</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NorthSouthSystems.BCL.Opinions" />
        <PackageReference Include="MemoryPack" />
        <PackageReference Include="morelinq" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="SevenZip\Binaries\*">
            <PackageCopyToOutput>true</PackageCopyToOutput>
            <PackageFlatten>true</PackageFlatten>
        </Content>
    </ItemGroup>

</Project>